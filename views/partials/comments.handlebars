<div class="comments">
{{!-- reiterating over the comments array --}}
{{!-- we use 'this' keyword to refer to the parent array of objects --}}
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>